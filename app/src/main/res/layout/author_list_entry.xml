<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:ignore="UnusedAttribute"
  android:layout_margin="@dimen/component_padding_vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="@dimen/card_elevation"
  card_view:cardBackgroundColor="@color/white"
  card_view:cardCornerRadius="@dimen/card_cornerradius"
>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/component_padding_vertical"
    android:orientation="vertical">

    <TextView
      android:id="@+id/author_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/font_size_xlarge"
      android:textStyle="bold"
    />
    <TextView
      android:id="@+id/author_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    />
    <TextView
      android:id="@+id/author_email"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableStart="@drawable/ic_email_grey600_24dp"
    />
    <TextView
      android:id="@+id/author_phone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableStart="@drawable/ic_phone_grey600_24dp"
    />
    <TextView
      android:id="@+id/author_twitter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableStart="@drawable/ic_twitter_grey600_24dp"
    />
  </LinearLayout>

</android.support.v7.widget.CardView>